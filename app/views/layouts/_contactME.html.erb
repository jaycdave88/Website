<div class="whiteBG">
	<div class="row">
		<div class="large-6 columns"> </div>
		<div id="headers">
			<h2 class='headers'>
				<span class="line_center">
					<a name="contact_me" style="cursor:default">
						Contact Me
					</a>
				</span>
			</h2>

			<form role="form" action='/api/v1/contact' method='post' id="contactForm" data-remote=true>

				<input type="text" placeHolder="Enter Name (Required)" name="name" id="name">


				<input type="email" placeHolder="Enter Email (Required)" name="email" id="email">


				<input type="text" placeHolder="Subject (Required)" name="subject" id="subject">


				<textarea name='message' placeholder='Type your message here (Required)' id="message"></textarea>


				<input class="btn submit_contactMe" type="button" value="Send Message">
			</form>


		</div>
	</div>

	<br>
</div>