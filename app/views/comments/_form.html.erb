<div class="row">
	<div class="small-11 small-centered columns">

		<div class="comment_form">
			<%= form_for([@post, @post.comments.build]) do |f|  %>
			<p>
				<%= f.label :name  %><br>
				<%= f.text_field :name  %>
			</p>

			<p>
				<%= f.label :body  %><br>
				<%= f.text_area :body  %>
			</p>
			<br>
			<p>
				<%= f.submit  :class => 'button secondary button radius'  %>
			</p>
			<% end  %>
		</div>
	</div>
</div>
